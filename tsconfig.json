{
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "rootDir": "lib/",
  "include": [
    "lib/**/*.ts",
    "index.ts",
    "docker/scripts/*.ts"
  ]
}
